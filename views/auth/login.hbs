<h1>Login</h1>
<form action='/auth/login' method='POST'>
<input type="hidden" name="_csrf"value={{csrfToken}}>
  <label>
    Email
    <input type='email' name='email' />
  </label>
  <label>
    Password
    <input type='password' name='password' />
  </label>

  <button type='submit'>Submit</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}